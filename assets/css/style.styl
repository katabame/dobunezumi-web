html, body, .contents, .section
	width: 100% !important
	height: 100vh !important

.section
	display: flex
	align-items: center
	justify-content: center
	flex-wrap: wrap
	flex-direction: column

@font-face
	font-family: "dokaben"
	src: url("/assets/font/NewDokabenFont.otf")

.dokaben
	font-family: "dokaben"

.back1
	background: url("/assets/img/back01.png") no-repeat center
	background-size: cover
	text-align: center
	h1
		color: #fff
		font-size: 2rem
		font-family: "ヒラギノ明朝 ProN W6", "HiraMinProN-W6", "HG明朝E", "ＭＳ Ｐ明朝", "MS PMincho", "MS 明朝", serif
	h2
		margin-top: 1rem
		font-size: 7rem

.back2
	width: 100%
	background: url("/assets/img/back02.png") no-repeat center
	background-size: cover
	h2
		margin-top: 30px
		text-align: center
		font-size: 3rem
		color: #fff
		font-family: "ヒラギノ明朝 ProN W6", "HiraMinProN-W6", "HG明朝E", "ＭＳ Ｐ明朝", "MS PMincho", "MS 明朝", serif
	p
		text-align: center
		color: #fff
		font-size: 1.5rem
		font-family: "ヒラギノ明朝 ProN W6", "HiraMinProN-W6", "HG明朝E", "ＭＳ Ｐ明朝", "MS PMincho", "MS 明朝", serif
	ul
		margin-top: 30px
	li
		color: #fff
		width: 100%
		margin: 5px auto 0 auto
		//list-style: none
		font-size: 2rem
		font-family: "ヒラギノ明朝 ProN W6", "HiraMinProN-W6", "HG明朝E", "ＭＳ Ｐ明朝", "MS PMincho", "MS 明朝", serif

.back3
	background: url("/assets/img/back03.png") no-repeat center
	background-size: cover
	height: 100vh

	h2
		color: #fff
		text-align: center
		font-size: 3rem
		font-family: "ヒラギノ明朝 ProN W6", "HiraMinProN-W6", "HG明朝E", "ＭＳ Ｐ明朝", "MS PMincho", "MS 明朝", serif
		margin-bottom: 25px
	.profile
		display: flex
		justify-content: center
		flex-wrap: wrap
	.Profile-Box
		background: #fff
		height: 20rem
		width: 12rem
		margin-left: 20px
		h3
			text-align: center
			margin-top: 15px
			font-family: "dokaben"
		p
			text-align: center
			margin-top: 10px
			font-family: "ヒラギノ明朝 ProN W6", "HiraMinProN-W6", "HG明朝E", "ＭＳ Ｐ明朝", "MS PMincho", "MS 明朝", serif
		i
			margin-top: 40px

	.Profile-img
		display: flex
		justify-content: center
		margin: auto
		width: 50%
		margin-top: 20px

		img
			width: 100%
			height: 100%
			//border: 1px solid #000
			border-radius: 50%
